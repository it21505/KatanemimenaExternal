    {{#if active}}
  <div class="container">

    <h2><b>Create Application</b></h2>
    <h4>Identification Data</h4>
    <hr>
  <form action="processApplication" method="POST">
    <input id="user" name="user" value="{{user}}" type="hidden">

    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputId">Id Number</label>
        <input name="dni" type="text" class="form-control" id="inputId" placeholder="ID Number" required>
      </div>
      <div class="form-group col-md-4">
        <label for="inputAdoption">Adoption Day</label>
        <input name="adoption" type="text" class="form-control" id="inputAdoption" placeholder="Adoption Day" aria-describedby="dateHelp" required>
        <small id="dateHelp" class="form-text text-muted">
          Date must be 'DD/MM/YYYY' format.
        </small>
      </div>
    </div>
    <div class="form-group">
      <label for="inputAuthority">Issuing Authority</label>
      <input name="authority" type="text" class="form-control" id="inputAuthority" placeholder="Issuing Authority" required>
    </div>
    <div class="form-group">
      <label for="inputRegister">Register Number</label>
      <input name="record" type="text" class="form-control" id="inputRegister" placeholder="Register Number" required>
    </div>
    <h4>Permanent Residence</h4>
    <hr>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputNumber">Street</label>
        <input name="street" type="text" class="form-control" id="inputId4" placeholder="Street" required>
      </div>
      <div class="form-group col-md-2">
        <label for="inputNumber">Number</label>
        <input name="number" type="text" class="form-control" id="inputNumber" placeholder="Number" required>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputCity">City</label>
        <input name="city" type="text" class="form-control" id="inputCity" placeholder="City" required>
      </div>
      <div class="form-group col-md-3">
        <label for="inputZip">Postal Code</label>
        <input name="postalCode" type="text" class="form-control" id="inputZip" placeholder="Postal Code" required>
      </div>
    </div>
    <div class="form-group">
      <label for="inputTelephone">Telephone</label>
      <input name="telephone" type="text" class="form-control" id="inputTelephone" placeholder="Telephone" required>
    </div>
    <div class="form-group">
      <label for="inputMobile">Mobile Number</label>
      <input name="mobile" type="text" class="form-control" id="inputMobile" placeholder="Mobile Number" required>
    </div>
    <h4>Financial and Some Personal Data</h4>
    <hr>
    <div class="form-group">
      <label for="inputBrothers">Number of Studying Brothers</label>
      <input name="numberOfStudyingBrothers" type="text" class="form-control" id="inputBrothers" placeholder="Number of Studying Brothers" required>
    </div>
    <div class="form-group">
      <label for="inputCityUniversity">City of University</label>
      <input name="cityOfUniversity" type="text" class="form-control" id="inputCityUniversity" placeholder="City of University" required>
    </div>
    <div class="form-row">
      <div class="form-group col-md-2">
        <label for="inputIncome">Income</label>
        <input name="income" type="text" class="form-control" id="inputIncome" placeholder="Income" required>
      </div>
      <div class="form-group col-md-1">
        <label for="inputEuros">Euros</label>
        <div class="input-group-append">
            <span id="inputEuros" class="input-group-text">€</span>
          </div>
        </div>
      <div class="form-group col-md-2">
        <label for="inputFamily">Family Income</label>
        <input name="familyIncome" type="text" class="form-control" id="inputFamily" placeholder="Family Income" required>
      </div>
      <div class="form-group col-md-1">
        <label for="inputEuros1">Euros</label>
        <div class="input-group-append">
            <span id="inputEuros1"class="input-group-text">€</span>
          </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Apply</button>
  </form>
      {{#if errors}}
          <div id="error" style="text-align: left;padding-left:140px"class="alert alert-danger" role="alert">
              {{#each errors}}
                  <li>{{msg}}</li>
              {{/each}}
          </div>
      {{/if}}

</div>

    {{else}}
        <div id="active" style="margin:25px; width:450px; text-align: left;padding-left:40px"class="alert alert-info" role="alert"><b>You are not yet active. </b>You must first wait to be activated from the office director , to be allowed to send an application.</div>
    {{/if}}

